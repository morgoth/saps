%h1 Listing teams

%table
  %tr
    %th Name
  
  - @teams.each do |team|
    %tr
      %td 
        =h team.name
      %td
        =h team.matches_played
      %td
        =h team.points
      %td
        =h team.sets_won
      %td
        =h team.sets_lost
      %td
        = link_to 'Show', team_path( team )
      %td
        = link_to 'Edit', edit_team_path(team)
      %td
        = link_to 'Destroy', team, :confirm => 'Are you sure?', :method => :delete

%br

= link_to 'New team', new_team_path
