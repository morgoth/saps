= simple_form_for @user_session, :url => user_session_path do |f|
  - if f.object.errors[:base].present?
    %span.error= f.object.errors[:base].to_sentence
  = f.input :login, :label => t("views.user_sessions.login_or_email")
  = f.input :password
  = f.input :remember_me, :as => :boolean, :required => false
  %div= f.button :submit, "Login", :class => "button"

%p= link_to t("views.user_sessions.forgot_password"), new_password_reset_path
