= error_messages_for :user
- form_for :user, :url => users_path do |f|
  %p
    Login:
    %br
    = f.text_field :login
  %p
    Password:
    %br
    = f.password_field :password
  %p
    Password confirmation
    %br
    = f.password_field :password_confirmation
  %p
    = submit_tag 'Sign up', :class=> 'button'
