!!! Strict
%html{html_attrs}
  %head
    %meta{:name=>"verify-v1", :content=>"VDay2poQ3W5SY7Z2UBrK/LA+acfXfcMw8lzrTKzxKbU="}
    %title SAPS Gliwice
    %link{:rel=>"shortcut icon", :href=>"/images/ball.ico"}
    = stylesheet_link_tag "saps"
    = javascript_include_tag :defaults
    = auto_discovery_link_tag(:rss, formatted_league_matches_path(@active_league, :rss)) unless @active_league.blank?
  %body
    #wrap
      #header
        %h1#logo-text
          saps
        %p#slogan
          Stowarzyszenie Amatarów Piłki Siatkowej
        #header-links
          - if Gibberish.current_language == :en
            = link_to image_tag( "/images/pl.gif"), current('pl')
          - else
            = link_to image_tag( "/images/en.gif"), current('en')        
      #menu
        %ul#jsddm
          %li= link_to "posts"[:posts], posts_path
          %li
            = link_to "league"[:league], :controller=>'leagues', :action => 'show'
            %ul
              %li= link_to "teams"[:teams], teams_path
              %li= link_to "leagues"[:leagues], leagues_path
          %li= link_to "gallery"[:gallery], gallery_path
          %li= link_to "players"[:players], players_path
          - if logged_in?
            %li= link_to "users"[:users], users_path
            %li= link_to "Logout #{current_user.login}", logout_path
          - else
            %li= link_to "Login", login_path
      #content-wrap
        #main
          = flash_messages
          = yield 
      #footer
        %span.first= link_to image_tag("/images/rails.png"), "http://rubyonrails.org"
        = link_to image_tag("/images/heroku.png"), "http://heroku.com"
        %br
        %span.txt= h "Kontakt: saps.gliwice@gmail.com"
