<h1>Listing matches</h1>

<table>
  <tr>
    <th>Home team</th>
    <th>Visitor team</th>
    <th>Hour</th>
    <th>Score</th>
    <th>Round</th>
  </tr>

<% for match in @matches %>
  <tr>
    <td><%=h match.home_team_id %></td>
    <td><%=h match.visitor_team_id %></td>
    <td><%=h match.hour %></td>
    <td><%=h match.score %></td>
    <td><%=h match.round_id %></td>
    <td><%= link_to 'Show', match %></td>
    <td><%= link_to 'Edit', edit_match_path(match) %></td>
    <td><%= link_to 'Destroy', match, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New match', new_match_path %>
