%h1= t("views.teams.index")
- if logged_in?
  = link_to t("views.teams.new"), new_team_path
%ul
  - @teams.each do |team|
    %li
      = link_to "#{team.name}", team
      - if logged_in?
        = " - "
        = link_to t("edit"), edit_team_path(team)
        = " | "
        = link_to t("destroy"), team, :confirm => t("sure"), :method => :delete

