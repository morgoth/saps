%h1 League table

%table
  %tr
    %th Name
    %th Matches played
    %th Points
    %th Sets won
    %th Sets lost  
  - @teams.each do |team|
    %tr
      %td
        =link_to "#{team.name}", team
      %td
        =h team.matches_played
      %td
        =h team.points
      %td
        =h team.sets_won
      %td
        =h team.sets_lost