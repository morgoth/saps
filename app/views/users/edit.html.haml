%h1 
  = 'Editing'[:editing]
= error_messages_for :user
- form_for (@user) do |f|
  %p
    Login:
    = @user.login
    = f.hidden_field :login
  %p
    Password:
    %br
    = f.password_field :password
  %p
    Password confirmation
    %br
    = f.password_field :password_confirmation
  %p
    = submit_tag 'Update'[:update]
